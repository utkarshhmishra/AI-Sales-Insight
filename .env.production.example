# Production Environment Configuration
# Copy this file to .env.production and fill in your values

# Environment
ENVIRONMENT=production
DEBUG=false

# Database (RDS)
DATABASE_URL=postgresql://salesinsight:YOUR_PASSWORD@your-rds-endpoint.us-east-1.rds.amazonaws.com:5432/ai_sales_insight
POSTGRES_USER=salesinsight
POSTGRES_PASSWORD=YOUR_SECURE_PASSWORD
POSTGRES_DB=ai_sales_insight

# Redis (ElastiCache)
REDIS_URL=redis://your-elasticache-endpoint.cache.amazonaws.com:6379/0
REDIS_PASSWORD=YOUR_REDIS_PASSWORD

# OpenAI API
OPENAI_API_KEY=sk-...

# Anthropic API
ANTHROPIC_API_KEY=sk-ant-...

# Twitter API
TWITTER_API_KEY=...
TWITTER_API_SECRET=...
TWITTER_ACCESS_TOKEN=...
TWITTER_ACCESS_TOKEN_SECRET=...
TWITTER_BEARER_TOKEN=...

# LinkedIn API
LINKEDIN_API_KEY=...
LINKEDIN_API_SECRET=...

# Financial Data APIs
ALPHA_VANTAGE_API_KEY=...
FINNHUB_API_KEY=...

# CORS Configuration
CORS_ORIGINS=["https://yourdomain.com","https://www.yourdomain.com"]
ALLOWED_ORIGINS=https://yourdomain.com

# JWT Configuration
SECRET_KEY=your-super-secret-jwt-key-change-this
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# Logging
LOG_LEVEL=INFO
LOG_TO_CLOUDWATCH=true
CLOUDWATCH_LOG_GROUP=/aws/application/ai-sales-insight

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# Application Settings
MAX_WORKERS=4
TIMEOUT_SECONDS=60
MAX_CONNECTIONS=100

# AWS Configuration (optional - can use IAM roles)
AWS_ACCESS_KEY_ID=...
AWS_SECRET_ACCESS_KEY=...
AWS_REGION=us-east-1
AWS_S3_BUCKET=ai-sales-insight-uploads

# Monitoring
SENTRY_DSN=https://...@sentry.io/...
DATADOG_API_KEY=...

# Feature Flags
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true
ENABLE_ANALYTICS=true
ENABLE_SOCIAL_MEDIA=true
ENABLE_FINANCIAL_DATA=true
