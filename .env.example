# =============================================================================
# AI Sales Insight - Environment Configuration
# =============================================================================

# =============================================================================
# LLM API Keys (Choose ONE)
# =============================================================================
# Option 1: OpenAI (Recommended for best results)
OPENAI_API_KEY=sk-your-openai-api-key-here
OPENAI_MODEL=gpt-4o

# Option 2: Anthropic Claude
ANTHROPIC_API_KEY=sk-ant-your-anthropic-key-here
ANTHROPIC_MODEL=claude-3-5-sonnet-20241022

# Option 3: Ollama (Free, Local LLM)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2

# =============================================================================
# Data Source APIs
# =============================================================================

# News APIs
NEWSAPI_KEY=your-newsapi-key-here
# Get free key: https://newsapi.org/ (500 requests/day free)

# Financial Data
ALPHAVANTAGE_API_KEY=your-alpha-vantage-key
# Get free key: https://www.alphavantage.co/support/#api-key (25 requests/day free)

# Company Data Enrichment
CLEARBIT_API_KEY=your-clearbit-api-key
# Clearbit API: https://clearbit.com/

# Web Search
SERPER_API_KEY=your-serper-api-key
# Serper API (Google Search): https://serper.dev/ (2500 free searches)

# Social Media (Optional)
TWITTER_BEARER_TOKEN=your-twitter-bearer-token
LINKEDIN_ACCESS_TOKEN=your-linkedin-token

# =============================================================================
# CRM Integrations (Optional)
# =============================================================================
SALESFORCE_CLIENT_ID=your-salesforce-client-id
SALESFORCE_CLIENT_SECRET=your-salesforce-client-secret
ZOHO_CLIENT_ID=your-zoho-client-id
ZOHO_CLIENT_SECRET=your-zoho-client-secret
HUBSPOT_API_KEY=your-hubspot-api-key

# =============================================================================
# Database Configuration
# =============================================================================
DATABASE_URL=postgresql://user:password@localhost:5432/ai_sales_insight
REDIS_URL=redis://localhost:6379/0

# =============================================================================
# Application Settings
# =============================================================================
APP_ENV=development
APP_DEBUG=true
SECRET_KEY=your-secret-key-change-in-production
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# =============================================================================
# Agent Configuration
# =============================================================================
MAX_CONCURRENT_AGENTS=5
AGENT_TIMEOUT_SECONDS=120
ENABLE_CACHING=true
CACHE_TTL_HOURS=24

# =============================================================================
# Monitoring & Logging
# =============================================================================
LOG_LEVEL=INFO
ENABLE_TELEMETRY=true
SENTRY_DSN=your-sentry-dsn

# =============================================================================
# Email Notifications (Optional)
# =============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@aisalesinsight.com
